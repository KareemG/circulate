extends layout

block content
  h1 Employee Dashboard
  .employee-widget-container
    -for (i=0; i<potentialSwitches.length; i+=2){
    .employee-widget-container-exchange
      .posting-widget
        h1 -postings[i].employee.profile.name;
        p -postings[i].bio;
        h2
        -for(j=0; j<postings[i].tags.length; j++) {
          .tag 
            -postings[i].tags[j];
        -}
      .employer-widget-container-exchange-arrow 
      .posting-widget
        h1 -postings[i+1].employee.profile.name;
        p -postings[i+1].bio;
        h2
        -for(j=0; j<postings[i+1].tags.length; j++) {
          .tag 
            -postings[i+1].tags[j];
        -}
    -}
